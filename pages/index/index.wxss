/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.usermotto {
  margin-top: 50px;
}
.message-list {
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  width: 100%;
  height: 95px;
  border-bottom: 1px solid #f3f3f3;
  border-top: none;
  border-left: none;
  border-right: none;
  background-color: #ffffff;
  position: relative;

}
.list-left {
  display: inline-block;
  margin: 18px 0 0 15px;
  width: 58px;
  height: 58px;
  border: 1px solid #e6e6e6;
  text-align: center;
  line-height: 58px;
}
.list-right{
  vertical-align: top;
  display: inline-block;
  margin: 18px 0 0 15px;
  width: calc(100% - 120px);
  height: 58px;
  text-align: left;
  line-height: 58px;
}
.list-left image {
  width: 100%;
  height: 100%;
}
.list-title {
  vertical-align: top;
  height: 19px;
  line-height: 19px;
  font-size: 16px;
  color: #4c4c4c;
}
.list-content {
  vertical-align: top;
  height: 20px;
  line-height: 19px;
  color: #4c4c4c;
}
.list-rate {
  height: 20px;
  line-height: 20px;
  font-size: 12px;
  color: #9292a5
}
.list-rate1 {
  float: right;
  height: 20px;
  line-height: 20px;
  font-size: 12px;
  color: #fa697a
}
.list-tag {
  margin-top: -1px;
  boder: none;
  display: inline-block;
}
.list-tag text{
  vertical-align: top;
  display: inline-block;
  height: 12px;
  line-height: 12px;
  font-size: 10px;
  padding: 1px 2px;
}
.list-tag-1 {
  border: 1px solid #a8c5f3;
  color: #7373A1;
}

.list-tag-2 {
  margin-left: 2px; 
  border: 1px solid #fbb3bc;
  color: #F96879;
}